{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do tabnews.com.br no curso.dev do Filipe Deschamps",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\" ",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "next:lint": "next lint --dir .",
    "db:start": "docker compose -f infra/compose.yaml up -d",
    "db:stop": "docker compose -f infra/compose.yaml down",
    "prepare": "husky",
    "commit": "cz",
    "secret:lint": "npx --no-install lint-staged",
    "npm-check-updates-i": "npx npm-check-updates -i",
    "my:check:dep": "npm run test && npm run lint:prettier:check && npm run lint:eslint:check"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.5",
    "dotenv-expand": "12.0.0",
    "next": "15.0.3",
    "node-pg-migrate": "7.8.0",
    "pg": "8.13.1",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "19.5.0",
    "@secretlint/secretlint-rule-preset-recommend": "9.0.0",
    "commitizen": "4.3.1",
    "commitlint": "19.5.0",
    "concurrently": "9.1.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.15.0",
    "eslint-config-next": "15.0.3",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.9.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "secretlint": "9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ]
  }
}
